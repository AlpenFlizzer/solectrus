= link_to url_for(**helpers.permitted_params.merge(sort: desc? ? 'asc' : 'desc', only_path: true)),
          class: 'flex items-center px-4 h-full bg-transparent text-gray-300 rounded-md shadow-sm font-medium ' \
                 'hover:bg-indigo-500 hover:bg-opacity-75 ' \
                 'focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-indigo-500',
          title: t('.title'),
          data: { \
            controller: 'tippy',
            tippy_touch_value: false,
          } do
  i.fas.fa-lg class= (desc? ? 'fa-arrow-down-wide-short' : 'fa-arrow-down-short-wide')

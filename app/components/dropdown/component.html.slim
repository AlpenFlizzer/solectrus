div
  div data-controller= 'select'
    select.block.lg:hidden.border-0.focus:ring-0.font-medium.rounded[
      data-select-target= 'select'
      data-action= 'select#onChange'
      class= select_class
    ]
      - items.each do |item|
        option[
          value= item[:href]
          data= item[:data]
          selected= (item == selected_item)
        ]
          = item[:name]

    select.absolute.invisible.font-medium data-select-target= 'temp' class= select_class
      option

  .hidden.relative.lg:inline-block.text-left data-controller="dropdown--component"
    div data-dropdown--component-target="button" data-action="click->dropdown--component#toggleMenu"
      button#options-menu.inline-flex.justify-center.items-end.w-full.rounded-md.px-2.sm:px-4.py-2.bg-transparent.font-medium.focus:outline-none.focus:ring-2.focus:ring-indigo-500[
        class= button_class
        aria-expanded="true"
        aria-haspopup="true"
        type="button"
      ]
        = selected_item[:name]
        svg.-mr-1.ml-2.h-5 aria-hidden="true" fill="currentColor" viewbox="0 0 20 20"
          path[
            clip-rule="evenodd"
            fill-rule="evenodd"
            d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
          ]

    .z-10.origin-top-right.absolute.right-0.mt-2.rounded-md.shadow-lg.bg-white.ring-1.ring-black.ring-opacity-5.hidden[
      data-dropdown--component-target="menu"
      data-transition-enter="transition ease-out duration-100"
      data-transition-enter-start="opacity-0 scale-95"
      data-transition-enter-end="opacity-100 scale-100"
      data-transition-leave="transition ease-in duration-75"
      data-transition-leave-start="opacity-100 scale-100"
      data-transition-leave-end="opacity-0 scale-95"
    ]
      .py-1 aria-labelledby="options-menu" aria-orientation="vertical" role="menu"
        - items.each do |item|
          a.block.px-6.py-2.text-gray-700.hover:bg-gray-100.hover:text-gray-900.whitespace-nowrap href= item[:href] data= item[:data] role="menuitem"
            = item[:name]

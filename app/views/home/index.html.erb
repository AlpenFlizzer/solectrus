<div class="text-center p-5">
  <h1 class="text-5xl">SENEC</h1>
  <p class="text-gray-500">Last 24 hours</p>
</div>

<div class="max-w-2xl mx-auto grid sm:grid-cols-2 gap-5">
  <%= render 'card', title: 'Inverter Power',    value: number_to_kwh(calculator.inverter_power) %>
  <%= render 'card', title: 'House Power',       value: number_to_kwh(calculator.house_power) %>
  <%= render 'card', title: 'Grid Power (In)',   value: number_to_kwh(calculator.grid_power_plus),  extra: number_to_eur(calculator.paid) %>
  <%= render 'card', title: 'Grid Power (Out)',  value: number_to_kwh(calculator.grid_power_minus), extra: number_to_eur(calculator.got) %>
</div>

<div class="mt-5 max-w-2xl mx-auto grid sm:grid-cols-3 gap-5">
  <%= render 'card', title: 'Solar Price',       value: number_to_eur(calculator.solar_price) %>
  <%= render 'card', title: 'Traditional Price', value: number_to_eur(calculator.traditional_price) %>
  <%= render 'card', title: 'Profit',            value: number_to_eur(calculator.profit) %>
</div>